{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",

        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,

        "strict": true,

        "outDir": "./build",
        "declaration": false,
        "allowJs": true,
        "removeComments": false,

        "forceConsistentCasingInFileNames": true,

        "esModuleInterop": true,

        "resolveJsonModule": true,

        "skipLibCheck": true
    }
}